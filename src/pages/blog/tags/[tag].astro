---
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import SkillBadge from "../../../components/SkillBadge.astro";

// 动态路由所需：生成所有标签的静态路径
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const normalize = (s: string) => s.toLowerCase().replace(/\s+/g, "-").trim();

  const tags = new Set<string>();
  for (const p of posts) {
    (p.data.tags ?? []).forEach((t) => tags.add(normalize(t)));
  }

  return Array.from(tags).map((tag) => ({ params: { tag } }));
}

const posts = await getCollection("blog");
const { tag } = Astro.params;

const normalize = (s: string) => s.toLowerCase().replace(/\s+/g, "-").trim();
const normalizedTag = normalize(tag);
const filtered = posts
  .filter((p) => (p.data.tags ?? []).some((t) => normalize(t) === normalizedTag))
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" });
}
---

<Layout title={`Blog - ${tag}`} description={`Posts tagged "${tag}"`}>
  <main class="max-w-6xl mx-auto px-4 py-20">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4">#{tag}</h1>
      <p class="text-xl text-base-content/70">
        Showing posts tagged with <span class="font-semibold">"{tag}"</span>.
      </p>
    </div>

    <!-- Back links -->
    <div class="mb-8 flex gap-3">
      <a href="/blog" class="btn btn-ghost btn-sm">Back to Blog</a>
      <a href="/" class="btn btn-ghost btn-sm">Back to Home</a>
    </div>

    {
      filtered.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-2xl text-base-content/60">
            No posts found for "{tag}".
          </p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {filtered.map((post) => (
            <article class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
              <figure class="aspect-video">
                <Image
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  width={600}
                  height={400}
                />
              </figure>
              <div class="card-body">
                <time class="text-sm text-base-content/60">
                  {formatDate(post.data.publishDate)}
                </time>
                <h2 class="card-title hover:text-primary transition-colors">
                  <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </h2>
                <p class="text-base-content/80">{post.data.description}</p>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-2">
                    {post.data.tags.map((t) => (<SkillBadge skill={t} />))}
                  </div>
                )}
                <div class="card-actions justify-end mt-4">
                  <a href={`/blog/${post.id}`} class="btn btn-primary btn-sm">Read More</a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )
    }
  </main>
</Layout>