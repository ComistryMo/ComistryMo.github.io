---
interface Props {
  title: string;
  photo?: string;
  Content: any;
}

const { title, photo, Content } = Astro.props;
---

<section id="about" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="card card-side bg-base-200 shadow-xl overflow-hidden">
      {
        photo && (
          <figure class="shrink-0 m-0 p-0">
            <img 
              src={photo} 
              alt={title}
              class="w-64 h-full object-cover"
              loading="lazy"
            />
          </figure>
        )
      }
      <div class="card-body">
        <h2 class="card-title text-3xl">{title}</h2>
        <div class="text-base leading-relaxed">
          <Content />
        </div>
      </div>
    </div>
  </div>
</section>
